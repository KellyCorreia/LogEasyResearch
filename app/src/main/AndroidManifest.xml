<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kelly.logeasyresearch">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    

    <application android:allowBackup="true"
        android:icon="@drawable/blueicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.example.kelly.logeasyresearch.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name="com.example.kelly.logeasyresearch.LessonActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name="com.example.kelly.logeasyresearch.QuizActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name="com.example.kelly.logeasyresearch.HintActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name="com.example.kelly.logeasyresearch.Create_User"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name="com.example.kelly.logeasyresearch.Choose_Player"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name="com.example.kelly.logeasyresearch.LogEasy"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.kelly.logeasyresearch.LevelsActivity"
            android:label="@string/title_activity_levels"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name="com.example.kelly.logeasyresearch.InfoActivity"
            android:label="@string/title_activity_info"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
        </activity>

    </application>

</manifest>
