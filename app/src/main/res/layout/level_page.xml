<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff7ebcf"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pagina2"
        android:id="@+id/boardLevel"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imbLevel1"
            android:background="@drawable/level1"
            android:visibility="gone"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="30dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imbLevel2"
            android:background="@drawable/level2"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="150dp"
            android:visibility="gone" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imbLevel3"
            android:background="@drawable/level3"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="280dp"
            android:visibility="gone" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imbLevel4"
            android:background="@drawable/level4"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="170dp"
            android:visibility="gone" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imbLevel5"
            android:background="@drawable/level5"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="80dp"
            android:visibility="gone" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imbLevel6"
            android:background="@drawable/level6"
            android:visibility="visible"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imbLevel7"
            android:background="@drawable/level7"
            android:visibility="visible"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="260dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imbLevel8"
            android:background="@drawable/level8"
            android:visibility="visible"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="180dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imbLevel9"
            android:background="@drawable/level9"
            android:layout_marginTop="130dp"
            android:visibility="visible"
            android:layout_marginLeft="220dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imbLevel10"
            android:background="@drawable/level10"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="250dp" />

    </RelativeLayout>


</RelativeLayout>